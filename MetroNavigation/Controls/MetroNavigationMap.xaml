                <Ellipse Canvas.Bottom="580" Canvas.Left="692" Width="25" Height="25" Fill="Black"></Ellipse>
                <Ellipse Canvas.Bottom="541" Canvas.Left="608" Width="25" Height="25" Fill="Black"></Ellipse>
                <Line X2="704" X1="767.5" Y2="14" Y1="-18" Stroke="Black" StrokeThickness="1"/>
                <Line X2="704" X1="620" Y2="45" Y1="84" Stroke="Red" StrokeThickness="1"/>-->
            
        </Grid>
</UserControl>
